{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@pkgs/*": ["src/packages/*"],
      "@common/*": ["src/common/*"],
      "@cpts/*": ["src/components/*"],
      "@BComponent": ["src/components/BaseComponent"],
      "@interface": ["src/interface"],
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "dist/*",
    "examples/*",
  ],
}
